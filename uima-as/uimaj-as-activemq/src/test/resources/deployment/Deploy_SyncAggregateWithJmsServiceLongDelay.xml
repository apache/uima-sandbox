<analysisEngineDeploymentDescription xmlns="http://uima.apache.org/resourceSpecifier">
  
  <name>Top Level TAE</name>
  <description></description>
  
  <deployment protocol="jms" provider="activemq">
    <casPool numberOfCASes="5"/>
    <service>
      <inputQueue endpoint="TopLevelTaeQueue" brokerURL="tcp://localhost:8118" prefetch="1"/>
      <topDescriptor>
        <import location="../descriptors/analysis_engine/SimpleTestAggregateWithJmsServiceLongDelay.xml"/>
      </topDescriptor>
      <analysisEngine async="false">
      <!-- Run the CM & Jms Service Adapter synchronously, just as RunAE and CPE do -->
      </analysisEngine>
    </service>
  </deployment>
  
</analysisEngineDeploymentDescription>
