<!-- Aggregate descriptor for testing merging of type system, type priorities, and indexes. -->
<analysisEngineDescription xmlns="http://uima.apache.org/resourceSpecifier">
	<frameworkImplementation>org.apache.uima.java</frameworkImplementation>
	<primitive>false</primitive>
	<delegateAnalysisEngineSpecifiers>
		<delegateAnalysisEngine key="NamesAndPersonTitlesTAE">
			<import location="analysis_engine/NamesAndPersonTitles_TAE.xml"/>
		</delegateAnalysisEngine>
		<delegateAnalysisEngine key="XCASWriter">
			<import location="cas_consumer/XCasWriterCasConsumer.xml"/>
		</delegateAnalysisEngine>
	</delegateAnalysisEngineSpecifiers>
	<analysisEngineMetaData>
		<name>Aggregate TAE containing an Annotator and a CAS Consumer</name>
		<description>For testing mixed aggregate.</description>
		<version>1.0</version>
		<vendor>The Apache Software Foundation</vendor>
		<flowConstraints>
			<fixedFlow>
				<node>NamesAndPersonTitlesTAE</node>
				<node>XCASWriter</node>
			</fixedFlow>
		</flowConstraints>
		<!-- Capabilities: Inputs and Outputs -->
		<capabilities>
			<capability>
				<inputs/>
				<outputs>
					<type>example.Name</type>
					<type allAnnotatorFeatures="true">example.PersonTitle</type>
				</outputs>
				<languagesSupported/>
			</capability>
		</capabilities>
		<operationalProperties>
			<modifiesCas>true</modifiesCas>
			<multipleDeploymentAllowed>false</multipleDeploymentAllowed>
			<outputsNewCASes>false</outputsNewCASes>
		</operationalProperties>
	</analysisEngineMetaData>
</analysisEngineDescription>