<!-- sub-script of build.xml -->

<project name="internal-build-all-books" default="build-all-books">
    
  <target name="build-all-books" description="internal - build all books">
    <!--  Build the UIMA books  -->
    <property name="af" location="${docbook.tool.project}/build/process-one-book.xml"/>
    <ant antfile="${af}">
      <reference refid="saxon_and_fop.classpath"/>
      <property name="book_name" value="overview_and_setup"/>
    </ant>
    <ant antfile="${af}">
      <reference refid="saxon_and_fop.classpath"/>
      <property name="book_name" value="tutorials_and_users_guides"/>
    </ant>
    <ant antfile="${af}">
      <reference refid="saxon_and_fop.classpath"/>
      <property name="book_name" value="tools"/>
    </ant>
    <ant antfile="${af}">
      <reference refid="saxon_and_fop.classpath"/>
      <property name="book_name" value="references"/>
    </ant> 
  </target>
  
</project>
