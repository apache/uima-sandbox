<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<plugin>
   <extension-point id="learners" name="TextRuler Learner" schema="schema/org.apache.uima.tm.textruler.learner.exsd"/>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="org.apache.uima.tm.dltk.ui"
            class="org.apache.uima.tm.textruler.ui.TextRulerView"
            icon="icons/lineal.png"
            id="org.apache.uima.tm.textmarker.ml.MainView"
            name="TextRuler"
            restorable="true">
      </view>
      <view
            allowMultiple="true"
            category="org.apache.uima.tm.dltk.ui"
            class="org.apache.uima.tm.textruler.ui.TextRulerResultsView"
            icon="icons/lineal.png"
            id="org.apache.uima.tm.textruler.TextRulerResultsView"
            name="TextRuler Results"
            restorable="false">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="org.apache.uima.tm.textruler.ui.StartStopHandler"
            id="org.apache.uima.tm.textmarker.ml.startstop"
            name="StartStop">
      </command>
      <command
            defaultHandler="org.apache.uima.tm.textruler.ui.ConfigureLearnersHandler"
            id="org.apache.uima.tm.textruler.configure"
            name="Configure Learners">
      </command>
      <command
            defaultHandler="org.apache.uima.tm.textruler.ui.StartHandler"
            id="org.apache.uima.tm.textmarker.ml.start"
            name="Start">
      </command>
      <command
            defaultHandler="org.apache.uima.tm.textruler.ui.StopHandler"
            id="org.apache.uima.tm.textmarker.ml.stop"
            name="Stop">
      </command>
      <command
            defaultHandler="org.apache.uima.tm.textruler.ui.TestHandler"
            id="org.apache.uima.tm.textmarker.ml.test"
            name="Test">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:org.apache.uima.tm.textmarker.ml.MainView">
         <!--
         <command
               commandId="org.apache.uima.tm.textmarker.ml.startstop"
               icon="icons/PlayStop.png"
               id="MLStartStopCommand"
               label="Start/Stop"
               style="push">
         </command>
         -->
         <command
               commandId="org.apache.uima.tm.textmarker.ml.start"
               icon="icons/start.png"
               id="MLStartCommand"
               label="Start"
               style="push">
         </command>
         <command
               commandId="org.apache.uima.tm.textmarker.ml.stop"
               icon="icons/stop.gif"
               id="MLStopCommand"
               label="Stop"
               style="push">
         </command>
         <command
               commandId="org.apache.uima.tm.textruler.configure"
               icon="icons/config.gif"
               id="MLConfigCommand"
               label="Configure Learners"
               style="push">
            <visibleWhen
                  checkEnabled="true">
            </visibleWhen>
         </command>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.apache.uima.tm.textruler.TextRulerResultsView">
         <command
               commandId="org.apache.uima.tm.textmarker.ml.test"
               icon="icons/testing.gif"
               id="MLTestCommand"
               label="Test"
               style="push">
         </command>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.preferencePages">
      <page
            category="org.apache.uima.tm.dltk.preferences"
            class="org.apache.uima.tm.textruler.preferences.ConfigPreferencePage"
            id="org.apache.uima.tm.textruler"
            name="TextRuler">
      </page>
   </extension>

</plugin>
