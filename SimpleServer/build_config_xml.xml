<!-- set the basedir value to point to the top level of the project -->

<project name="SimpleServer Config XML" default="all" basedir=".">

	<property name="class.path" value="./lib/xbean.jar:./lib/jsr173_1.0_api.jar">
	</property>

	<property name="src.gen.dir" value="./target/xbeans-src" />

	<property name="bin.gen.dir" value="./target/xbeans-bin" />


	<taskdef name="xmlbean" classname="org.apache.xmlbeans.impl.tool.XMLBean" 
		classpath="lib/xbean.jar:lib/jsr173_1.0_api.jar" />

	<target name="all">

		<!-- Bean generation into target dir -->
		<xmlbean classpath="${class.path}" failonerror="true" javasource="1.5" 
			srcgendir="${src.gen.dir}" classgendir="${bin.gen.dir}" 
			schema="./src/main/resources/SimpleServerConfig.xsd">
		</xmlbean>

		<!-- Delete previously generated Java source code -->
		<delete dir="./src/main/java/org/apache/uima/simpleserver/config/xml" />

		<!-- Delete previously generated .xsb files -->
		<delete dir="./src/main/resources/schemaorg_apache_xmlbeans" />

		<!-- Copy generated java source into project source tree -->
		<copy todir="./src/main/java/org">
			<fileset dir="${src.gen.dir}/org" />
		</copy>

		<!-- Copy generated .xsb files into project resource dir -->
		<copy todir="./src/main/resources/schemaorg_apache_xmlbeans">
			<fileset dir="${bin.gen.dir}/schemaorg_apache_xmlbeans" />
		</copy>

		<!-- Delete temporary bin dir -->
		<delete dir="${bin.gen.dir}" />

		<!-- Delete temporary src dir -->
		<delete dir="${src.gen.dir}" />

	</target>

</project>





